<p id="notice"><%= notice %></p>
 
<h1>Listing Sites</h1>
<img src="/assets/logo-vela.png" align="right">
<table>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sort_link @search, :Site, "Site" %></th>
      <th><%= sort_link @search, :Location, "Location" %></th>
      <th><%= sort_link @search, :Contacts, "Contacts" %></th>
      <th><%= sort_link @search, :Email, "Email" %></th>
      <th><%= sort_link @search, :Installed, "Installed" %></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.site %></td>
        <td><%= site.location %></td>
        <td><%= site.contacts %></td>
        <td><%= site.email %></td>
        <td><%= site.installed %></td>
       
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
 
